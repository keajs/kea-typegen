{
    "name": "kea-typegen",
    "version": "0.8.0-beta.2",
    "description": "Generate type definitions for kea logic",
    "scripts": {
        "start": "ts-node ./src/cli/typegen.ts",
        "clean": "rimraf dist/*",
        "build": "tsc -p .",
        "prepublishOnly": "npm run test && npm run clean && npm run build",
        "run-built-cli": "node dist/src/cli/typegen.js",
        "test": "jest",
        "samples:check": "ts-node ./src/cli/typegen.ts check -c ./samples/tsconfig.json",
        "samples:write": "ts-node ./src/cli/typegen.ts write -c ./samples/tsconfig.json",
        "samples:watch": "ts-node ./src/cli/typegen.ts watch -c ./samples/tsconfig.json",
        "samples:write:posthog": "ts-node ./src/cli/typegen.ts write -c ../../PostHog/posthog/tsconfig.json"
    },
    "main": "dist/cli/typegen.js",
    "author": "Marius Andra <marius.andra@gmail.com>",
    "license": "MIT",
    "bin": {
        "kea-typegen": "dist/src/cli/typegen.js"
    },
    "dependencies": {
        "@wessberg/ts-clone-node": "0.3.19",
        "diff": "^5.0.0",
        "prettier": "^2.3.1",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13.1",
        "@babel/preset-env": "^7.13.5",
        "@babel/preset-typescript": "^7.13.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.31",
        "@types/yargs": "^16.0.0",
        "babel-jest": "^26.6.3",
        "husky": ">=4",
        "jest": "^27.0.5",
        "kea": "^2.4.2",
        "lint-staged": ">=10.5.4",
        "react": "^16.13.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    },
    "peerDependencies": {
        "typescript": "*"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/dist",
            "<rootDir>/node_modules",
            "<rootDir>/.yalc",
            "<rootDir>/samples/.yalc"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,scss}": "prettier --write"
    }
}
